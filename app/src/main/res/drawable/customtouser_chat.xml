<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <padding
                android:bottom="0dip"
                android:top="0dip"
                android:left="0dip"
                android:right="0dip"/>
            <corners
                android:radius="10dip" />
            <gradient
                android:startColor="@color/base"
                android:centerColor="@color/base"
                android:centerY="0.50"
                android:endColor="@color/base"
                android:angle="270" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="10dip" />
                <gradient
                    android:startColor="#DBD9DD"
                    android:endColor="#DBD9DD"
                    android:angle="90" />
            </shape>
        </clip>
    </item>
</layer-list>