<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/row_layout_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/picture_and_username"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/image_post_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_wall"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/username_wall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image_wall"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/clubLogoPost"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/down_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/arrow_down"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#9e9e9e" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_for_images_vide_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture_and_username">

            <RelativeLayout
                android:id="@+id/layout_audio_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">


                <TextView
                    android:id="@+id/audio_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_for_audio_player"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/layout_audio_textview"
                android:background="#b71c1c"
                android:visibility="visible">


                <Button
                    android:id="@+id/play_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/pause_button"
                    android:layout_toStartOf="@+id/pause_button"
                    android:background="@drawable/ic_play_circle_filled_black_24dp" />


                <Button
                    android:id="@+id/pause_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBaseline="@+id/play_button"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_pause_circle_filled_black_24dp" />

                <Button
                    android:id="@+id/stop_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBaseline="@+id/pause_button"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_toEndOf="@+id/pause_button"
                    android:layout_toRightOf="@+id/pause_button"
                    android:background="@drawable/ic_stop_black_24dp" />

                <SeekBar
                    android:id="@+id/audio_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="20dp"
                    android:progressDrawable="@drawable/red_scrubber_progress"
                    android:thumb="@drawable/red_scrubber_control" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_for_text_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/text_for_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_for_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_for_text_image"
                android:visibility="gone">

                <com.malikbisic.sportapp.DynamicImageView
                    android:id="@+id/posted_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/layout_for_text_image"
                    android:layout_margin="15dp"
                    android:visibility="visible"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_for_video_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/text_for_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/framelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_for_video_text"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp">

                <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                    android:id="@+id/posted_video"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/layout_for_only_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:padding="5dp">

                <TextView
                    android:id="@+id/post_text_main_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:textStyle="bold" />

            </RelativeLayout>

        </RelativeLayout>


        <View
            android:id="@+id/horizontal_line1264"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/layout_for_images_vide_audio"
            android:layout_marginTop="25dp"
            android:background="#9e9e9e" />

        <RelativeLayout
            android:id="@+id/like_dislike_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontal_line1264"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/number_of_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:textColor="#1976d2"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/number_of_likes"
                android:layout_toRightOf="@+id/number_of_likes"
                android:background="@drawable/blue_oval_for_like"
                android:padding="20dp"
                android:src="@drawable/bluelike"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comments_textview"
                android:text="Comments"
                android:textColor="#1976d2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_comments"
                android:layout_below="@+id/comments_textview"
                android:layout_centerHorizontal="true"

                android:textColor="#1976d2"
                />

            <TextView
                android:id="@+id/number_of_dislikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#d50000"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/dislike_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/number_of_dislikes"
                android:layout_toStartOf="@+id/number_of_dislikes"
                android:background="@drawable/red_oval_for_dislike"
                android:padding="20dp"
                android:src="@drawable/reddislike" />


        </RelativeLayout>

        <View
            android:id="@+id/horizontal_line_wall5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/like_dislike_layout"
            android:background="#9e9e9e" />

        <TextView
            android:id="@+id/comment_something"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontal_line_wall5"
            android:background="@null"
            android:ems="10"
            android:gravity="top"
            android:hint="comment something..."
            android:padding="5dp"
            android:textColor="#000000"
            android:textCursorDrawable="@null" />


    </RelativeLayout>


</android.support.v7.widget.CardView>