<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:background="#ffffff">


    <RelativeLayout
        android:id="@+id/row_layout_relative_my_posts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >

        <RelativeLayout
            android:id="@+id/picture_and_username_my_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/down_arrow_my_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:src="@drawable/drowpdown" />

            <RelativeLayout
                android:id="@+id/downarowshareclubcountrylayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/shareIconInPost"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/image_post_background_my_posts"
                    android:layout_toRightOf="@+id/image_post_background_my_posts"
                    android:src="@drawable/sharee" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/clubLogoPost_my_posts"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"


                    />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_post_background_my_posts"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/clubLogoPost_my_posts"
                    android:layout_toRightOf="@+id/clubLogoPost_my_posts"
                    android:scaleType="centerCrop" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layoutprofilimageusernametimeago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/downarowshareclubcountrylayout"
                android:padding="5dp">


                <RelativeLayout
                    android:id="@+id/layoutuserimageprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image_wall_my_posts"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"

                        />
                    <ProgressBar
                        android:id="@+id/loadImageProgressWallMyPosts"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_toLeftOf="@+id/layoutusernametimeago"
                        android:layout_toStartOf="@+id/layoutusernametimeago"
                        android:background="@drawable/progress_load_image" />

                    <RelativeLayout
                        android:id="@+id/layoutusernametimeago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/profile_image_wall_my_posts"
                        android:layout_toRightOf="@+id/profile_image_wall_my_posts">

                        <TextView
                            android:id="@+id/username_wall_my_posts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/postAgoTimeMyPostst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/username_wall_my_posts"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="prije par minuta"
                            android:textColor="#bdbdbd"

                            />


                    </RelativeLayout>


                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_for_images_vide_audio_my_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture_and_username_my_posts">

            <RelativeLayout
                android:id="@+id/layout_audio_textview_my_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="5dp">


                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/audio_textview_my_posts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:lineSpacingExtra="5dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    emojicon:emojiconAlignment="baseline"
                    emojicon:emojiconSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_for_audio_player_my_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_audio_textview_my_posts"
                android:background="@color/white"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/dugmici"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp">


                    <Button
                        android:id="@+id/play_button_my_posts"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/play_icon" />


                    <Button
                        android:id="@+id/pause_button_my_posts"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/play_button_my_posts"
                        android:layout_toRightOf="@+id/play_button_my_posts"
                        android:background="@drawable/pause_icon" />

                    <Button
                        android:id="@+id/stop_button_my_posts"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/pause_button_my_posts"
                        android:layout_toRightOf="@+id/pause_button_my_posts"
                        android:background="@drawable/stopicon" />

                </RelativeLayout>


                <SeekBar
                    android:id="@+id/audio_seek_bar_my_posts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dugmici"
                    android:layout_centerHorizontal="true"
                    android:progressDrawable="@drawable/red_scrubber_progress"
                    android:thumb="@drawable/red_scrubber_control" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_for_text_image_my_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="5dp"
                android:visibility="visible">

                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/text_for_image_my_posts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:lineSpacingExtra="5dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    emojicon:emojiconAlignment="baseline"
                    emojicon:emojiconSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_for_image_my_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_for_text_image"
                android:visibility="gone">

                <com.malikbisic.sportapp.utils.DynamicImageView
                    android:id="@+id/posted_image_my_posts"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@+id/layout_for_text_image_my_posts"
                    android:visibility="visible"

                    />

                <ProgressBar
                    android:id="@+id/loadImageProgressWallImageMyPosts"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/progress_load_image" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_for_video_text_my_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="5dp"
                android:visibility="visible">

                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/text_for_video_my_posts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:lineSpacingExtra="5dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    emojicon:emojiconAlignment="baseline"
                    emojicon:emojiconSize="20sp" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/framelayout_my_posts"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/layout_for_video_text_my_posts"

                >

                <cn.jzvd.JZVideoPlayerStandard
                    android:id="@+id/posted_video_my_posts"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />


            </FrameLayout>


            <RelativeLayout
                android:id="@+id/layout_for_only_post_my_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="5dp"
                android:visibility="visible">

                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/post_text_main_page_my_posts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:lineSpacingExtra="5dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    emojicon:emojiconAlignment="baseline"
                    emojicon:emojiconSize="20sp" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_for_only_postWithBackgroundMyPosts"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="gone">

                <com.rockerhieu.emojicon.EmojiconTextView
                    android:id="@+id/post_text_main_pageWithBackgroundMyPOsts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:lineSpacingExtra="5dp"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    emojicon:emojiconAlignment="baseline"
                    emojicon:emojiconSize="36sp" />

            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/like_dislike_layout_my_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_for_images_vide_audio_my_posts"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/layoutForNumberLikesDislikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/layoutlikenumberMyPosts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/likeImageNumber"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/thumbupgreen" />

                    <TextView
                        android:id="@+id/number_of_likes_my_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/likeImageNumber"
                        android:layout_toRightOf="@+id/likeImageNumber"
                        android:textColor="@color/primary" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layoutnumberdislikesMyPosts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">


                    <ImageView
                        android:id="@+id/dislikeImageNUmber"
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:src="@drawable/thumbdowngreen" />


                    <TextView
                        android:id="@+id/number_of_dislikes_my_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/dislikeImageNUmber"
                        android:layout_toRightOf="@+id/dislikeImageNUmber"
                        android:textColor="@color/primary" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layoutcommentsNumberMyPosts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">


                    <TextView
                        android:id="@+id/number_comments_my_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/comments_textview_my_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/number_comments_my_posts"
                        android:layout_toRightOf="@+id/number_comments_my_posts"
                        android:text="comments"
                        android:textColor="@color/primary"
                        android:visibility="gone" />

                </RelativeLayout>


            </RelativeLayout>

            <View
                android:id="@+id/dividerforlikesdislkes"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/layoutForNumberLikesDislikes"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/primary" />

            <RelativeLayout
                android:id="@+id/likedislikelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dividerforlikesdislkes"
                android:padding="10dp">

                <RelativeLayout
                    android:id="@+id/layoutlajkbuton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/like_button_my_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue_oval_for_like"
                        android:padding="10dp"
                        android:src="@drawable/thumbupgreen"

                        />

                    <TextView
                        android:id="@+id/likesomethingMyPosts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/like_button_my_posts"
                        android:layout_toRightOf="@+id/like_button_my_posts"
                        android:text="Like"
                        android:textColor="@color/primary" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutdislajkbuton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/dislike_button_my_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/red_oval_for_dislike"
                        android:padding="10dp"
                        android:src="@drawable/thumbdowngreen" />

                    <TextView
                        android:id="@+id/disliketekstMyPosts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/dislike_button_my_posts"
                        android:layout_toRightOf="@+id/dislike_button_my_posts"
                        android:text="Dislike"
                        android:textColor="@color/primary" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/commentimage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/commentsgreen" />


                    <TextView
                        android:id="@+id/comment_something_my_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/commentimage"
                        android:layout_toRightOf="@+id/commentimage"
                        android:text="Comment"
                        android:textColor="@color/primary" />

                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>

        <View
            android:id="@+id/horizontal_line_wall5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/like_dislike_layout_my_posts"
            android:background="#9e9e9e" />


    </RelativeLayout>


