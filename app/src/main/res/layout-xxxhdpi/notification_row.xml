<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <RelativeLayout
        android:id="@+id/notification_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/image_username_layout_not"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/notification_profil_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/notification_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/notification_profil_image"
                android:layout_toRightOf="@+id/notification_profil_image"
                android:textColor="#000"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/notification_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/notification_username"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/notification_username"
                android:layout_toRightOf="@+id/notification_username"
                android:textColor="#000" />

            <TextView
                android:id="@+id/setTimeAgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notification_profil_image"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:text="TextView"
                android:textColor="@color/blueColor" />

            <ImageView
                android:id="@+id/down_arrow_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:src="@drawable/arrow_down"
                android:visibility="gone" />

        </RelativeLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/image_username_layout_not"
            android:layout_centerVertical="true"
            android:background="#C2C0BC" />


    </RelativeLayout>


</RelativeLayout>