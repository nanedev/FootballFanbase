                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/primary" />

            <RelativeLayout
                android:id="@+id/likedislikelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dividerforlikesdislkes"
                android:padding="10dp">

                <RelativeLayout
                    android:id="@+id/layoutlajkbuton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/like_button_users_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue_oval_for_like"
                        android:padding="10dp"
                        android:src="@drawable/thumbupgreen"

                        />

                    <TextView
                        android:id="@+id/likesomethingUsersPost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/like_button_users_posts"
                        android:layout_toRightOf="@+id/like_button_users_posts"
                        android:text="Like"
                        android:textColor="@color/primary" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layoutdislajkbuton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/dislike_button_users_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/red_oval_for_dislike"
                        android:padding="10dp"
                        android:src="@drawable/thumbdowngreen" />

                    <TextView
                        android:id="@+id/disliketekstUsersPost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/dislike_button_users_posts"
                        android:layout_toRightOf="@+id/dislike_button_users_posts"
                        android:text="Dislike"
                        android:textColor="@color/primary" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/commentimage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/commentsgreen" />


                    <TextView
                        android:id="@+id/comment_something_users_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/commentimage"
                        android:layout_toRightOf="@+id/commentimage"
                        android:text="Comment"
                        android:textColor="@color/primary" />

                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>

        <View
            android:id="@+id/horizontal_line_wall5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/like_dislike_layout_users_posts"
            android:background="#9e9e9e" />


    </RelativeLayout>





