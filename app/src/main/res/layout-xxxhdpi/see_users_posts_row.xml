                    android:textSize="20sp"
                    emojicon:emojiconAlignment="baseline"
                    emojicon:emojiconSize="20sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_for_audio_player_users_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_audio_textview_users_posts"
                android:background="@color/white"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/dugmici"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp">


                    <Button
                        android:id="@+id/play_button_users_posts"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/play_icon" />


                    <Button
                        android:id="@+id/pause_button_users_posts"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/play_button_users_posts"
                        android:layout_toRightOf="@+id/play_button_users_posts"
                        android:background="@drawable/pause_icon" />

                    <Button
                        android:id="@+id/stop_button_users_posts"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/pause_button_users_posts"
                        android:layout_toRightOf="@+id/pause_button_users_posts"
