                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/clubLogoPost_users_posts"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"


                    />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_post_background_users_posts"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/clubLogoPost_users_posts"
                    android:layout_toRightOf="@+id/clubLogoPost_users_posts"
                    android:scaleType="centerCrop" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layoutprofilimageusernametimeago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/downarowshareclubcountrylayout"
                android:padding="5dp">


                <RelativeLayout
                    android:id="@+id/layoutuserimageprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image_wall_users_posts"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"

                        />
                    <ProgressBar
                        android:id="@+id/loadImageProgressWallUsersPost"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_toLeftOf="@+id/layoutusernametimeago"
                        android:layout_toStartOf="@+id/layoutusernametimeago"
                        android:background="@drawable/progress_load_image" />

                    <RelativeLayout
                        android:id="@+id/layoutusernametimeago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/profile_image_wall_users_posts"
                        android:layout_toRightOf="@+id/profile_image_wall_users_posts">

                        <TextView
                            android:id="@+id/username_wall_users_posts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/postAgoTimeUsersPost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/username_wall_users_posts"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="2dp"
                            android:text="prije par minuta"
                            android:textColor="#bdbdbd"

                            />


                    </RelativeLayout>


                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
