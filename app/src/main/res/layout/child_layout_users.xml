<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginLeft="40dp"
    android:layout_marginStart="40dp"
    app:cardBackgroundColor="#fff">

    <RelativeLayout
        android:id="@+id/cild_layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chat_contanier_usres">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/flagUsers"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileUsers"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/usernameUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/profileUsers"
                android:layout_toRightOf="@+id/profileUsers" />
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_toRightOf="@+id/usernameUsers"
                android:layout_toEndOf="@+id/usernameUsers"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/online_shape"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_below="@+id/chat_contanier_usres"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>