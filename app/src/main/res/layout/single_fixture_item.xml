<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/singleLayout"
      >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gameTime"
            android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
            android:textColor="#9e9e9e"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/localTeamResult"
            android:layout_alignBaseline="@+id/localTeamId"
            android:layout_alignBottom="@+id/localTeamId"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/visitorTeamResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/visitorTeamId"
            android:layout_alignBottom="@+id/visitorTeamId"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp"
            android:textColor="@color/black"
            android:visibility="gone"/>
        
       <View
           android:layout_width="20dp"
           android:layout_height="1dp"
           android:id="@+id/viewforresult"
           android:background="@color/black"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true"
           android:layout_marginRight="30dp"
           android:layout_marginEnd="30dp"
           android:layout_marginTop="4dp"
           android:visibility="gone"
           >

       </View>

        <View
            android:layout_width="1dp"
            android:layout_height="80dp"
     android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="80dp"
            android:layout_marginEnd="80dp"
            android:background="#9e9e9e"
            android:layout_centerVertical="true"
            android:id="@+id/nekiView"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/localLogo"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/localTeamId"
            android:layout_toRightOf="@+id/localLogo"
            android:layout_toEndOf="@+id/localLogo"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
           android:layout_alignBottom="@+id/localLogo"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/visitorLogo"
            android:layout_width="25dp"
            android:layout_height="25dp"
          android:layout_below="@+id/localLogo"
            android:layout_alignLeft="@+id/localLogo"
            android:layout_alignStart="@+id/localLogo"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/visitorTeamId"
            android:layout_toRightOf="@+id/visitorLogo"
            android:layout_toEndOf="@+id/visitorLogo"

            android:textColor="@color/black"
            android:layout_alignStart="@+id/localTeamId"
            android:layout_alignLeft="@+id/localTeamId"
            android:layout_alignBottom="@+id/visitorLogo"/>


        <TextView
            android:id="@+id/singleFixtureMinutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/nekiView"
            android:layout_toStartOf="@+id/nekiView"
            android:textColor="@color/black" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9e9e9e"
        android:layout_below="@+id/singleLayout"
        android:id="@+id/view6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view6">

        <TextView
            android:id="@+id/seetabletext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/singleLayout"
            android:text="SEE TABLE"
            android:textColor="@color/black" />
    </RelativeLayout>

</RelativeLayout>