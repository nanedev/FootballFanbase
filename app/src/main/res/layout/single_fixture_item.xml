<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gameTime"
            android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
            android:textColor="#9e9e9e"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_toLeftOf="@+id/gameTime"
            android:layout_toStartOf="@+id/gameTime"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:background="#9e9e9e"
            android:layout_centerVertical="true"
            android:id="@+id/nekiView"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/localLogo"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/localTeamId"
            android:layout_toRightOf="@+id/localLogo"
            android:layout_toEndOf="@+id/localLogo"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
           android:layout_alignBottom="@+id/localLogo"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/visitorLogo"
            android:layout_width="30dp"
            android:layout_height="30dp"
          android:layout_below="@+id/localLogo"
            android:layout_alignLeft="@+id/localLogo"
            android:layout_alignStart="@+id/localLogo"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/visitorTeamId"
            android:layout_toRightOf="@+id/visitorLogo"
            android:layout_toEndOf="@+id/visitorLogo"

            android:textColor="@color/black"
            android:layout_alignStart="@+id/localTeamId"
            android:layout_alignLeft="@+id/localTeamId"
            android:layout_alignBottom="@+id/visitorLogo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/localTeamResult"
            android:layout_alignBaseline="@+id/localTeamId"
            android:layout_alignBottom="@+id/localTeamId"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/visitorTeamResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/visitorTeamId"
            android:layout_alignBottom="@+id/visitorTeamId"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/singleFixtureMinutes"
           android:layout_toLeftOf="@+id/nekiView"
            android:layout_toStartOf="@+id/nekiView"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"/>









    </RelativeLayout>

</RelativeLayout>