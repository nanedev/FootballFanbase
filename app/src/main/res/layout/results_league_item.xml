<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/leagueRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="0dp"
        android:layout_marginTop="5dp"
        android:background="@color/iron"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/singleLayout"
        android:layout_below="@id/leagueClub"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gameTimeRes"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="#9e9e9e"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/localTeamResultRes"
            android:layout_alignBaseline="@+id/localTeamId"
            android:layout_alignBottom="@+id/localTeamId"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/visitorTeamResultRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/visitorTeamId"
            android:layout_alignBottom="@+id/visitorTeamId"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <View
            android:layout_width="20dp"
            android:layout_height="1dp"
            android:id="@+id/viewforresult"
            android:background="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            >

        </View>

        <View
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="80dp"
            android:layout_marginEnd="80dp"
            android:background="#9e9e9e"
            android:layout_centerVertical="true"
            android:id="@+id/nekiView"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/localLogoRes"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/localTeamId"
            android:layout_toRightOf="@+id/localLogoRes"
            android:layout_toEndOf="@+id/localLogoRes"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:layout_alignBottom="@+id/localLogoRes"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/visitorLogoRes"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/localLogoRes"
            android:layout_alignLeft="@+id/localLogoRes"
            android:layout_alignStart="@+id/localLogoRes"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/visitorTeamId"
            android:layout_toRightOf="@+id/visitorLogoRes"
            android:layout_toEndOf="@+id/visitorLogoRes"

            android:textColor="@color/black"
            android:layout_alignStart="@+id/localTeamId"
            android:layout_alignLeft="@+id/localTeamId"
            android:layout_alignBottom="@+id/visitorLogoRes"/>


        <TextView
            android:id="@+id/singleFixtureMinutesRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/nekiView"
            android:layout_toStartOf="@+id/nekiView"
            android:textColor="@color/black" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9e9e9e"
        android:layout_below="@+id/singleLayout"
        android:id="@+id/view6" />


</RelativeLayout>