<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <RelativeLayout
            android:id="@+id/positionLAyout"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/position_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="1"

                android:textColor="#000" />

        </RelativeLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/club_logo_league_info"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBaseline="@+id/positionLAyout"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/positionLAyout"
            android:layout_toRightOf="@+id/positionLAyout" />


        <TextView
            android:id="@+id/club_name_league_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/club_logo_league_info"
            android:layout_toRightOf="@+id/club_logo_league_info"
            android:text="dsadas"
            android:textColor="#000" />


        <TextView
            android:id="@+id/points_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp"
            android:layout_marginEnd="22dp"
            android:text="Pts."
            android:textColor="#000" />

        <TextView
            android:id="@+id/goal_difference_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/points_row"
            android:layout_toStartOf="@+id/points_row"
            android:text="GD"
            android:textColor="#000" />


        <TextView
            android:id="@+id/played_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/goal_difference_row"
            android:layout_toStartOf="@+id/goal_difference_row"
            android:text="Played"
            android:textColor="#000" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rowlayout"
        android:background="@color/black" />

</RelativeLayout>