<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemcontainer"
        android:padding="5dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number fans voted for this player:"
            android:textColor="#81d4fa"

            android:id="@+id/nekitekst"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerRAnkingFansVotedNmbr"
            android:layout_toRightOf="@+id/nekitekst"
            android:layout_alignBaseline="@+id/nekitekst"
            android:layout_toEndOf="@+id/nekitekst"
            android:layout_marginLeft="10dp"
            android:text="23"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:textColor="#81d4fa"
            />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/nekitekst"
    android:padding="5dp"
    android:layout_marginTop="5dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/playerRankingImage"

      />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playerRankingName"
        android:layout_toLeftOf="@+id/playerRankingImage"
        android:layout_toStartOf="@+id/playerRankingImage"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:id="@+id/playerRankingposition"
        android:textColor="@color/black"/>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300 pts"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:id="@+id/playerRankingPints"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:textColor="@color/black"/>


</RelativeLayout>




    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@+id/itemcontainer"/>


</RelativeLayout>