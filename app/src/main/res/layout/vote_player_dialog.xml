<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:padding="20dp">
    <TextView
        android:id="@+id/playerPointsVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:text="Player points:2"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/myPointsVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:text="Your points:"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playerimagelayout"
    android:layout_below="@+id/playerPointsVote"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"

        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/playerImageVote"
            android:layout_width="90dp"
            android:layout_height="90dp"
android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/playerNameVote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playerImageVote"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/votetextview"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/playerNameVote"
            android:text="Enter amount of points for this player"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/enterPointsVote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/votetextview"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="Enter points"
            android:inputType="number"
            android:textColor="@color/white"
            android:gravity="center"/>

    </RelativeLayout>



</RelativeLayout>














