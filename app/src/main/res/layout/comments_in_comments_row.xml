<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#ffffff">

    <RelativeLayout
        android:id="@+id/container_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:id="@+id/layout_for_comments_image_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileCommentInComment"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"


                />

            <TextView
                android:id="@+id/username_comment_profile_in_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/profileCommentInComment"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/profileCommentInComment"
                android:layout_toRightOf="@+id/profileCommentInComment"
                android:text="neki username"
                android:textColor="#000"
                android:textStyle="bold" />

            <com.rockerhieu.emojicon.EmojiconTextView
                android:id="@+id/textCommentInComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/username_comment_profile_in_comment"
                android:layout_alignStart="@+id/username_comment_profile_in_comment"
                android:layout_below="@+id/username_comment_profile_in_comment"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="5dp"
                android:textColor="#000000"
                android:padding="5dp"
                emojicon:emojiconAlignment="baseline"
                emojicon:emojiconSize="20sp" />

            <ImageView
                android:id="@+id/down_arrow_comments_in_Comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="2dp"
                android:src="@drawable/arrow_down"
                android:visibility="gone" />

        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>
