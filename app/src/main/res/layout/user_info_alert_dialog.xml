<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showinfolayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fromimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_home_black_24dp"
            android:layout_margin="10dp"/>



        <TextView
            android:id="@+id/user_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/fromimg"
            android:layout_toEndOf="@+id/fromimg"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_alignBaseline="@+id/fromimg"
            android:layout_alignBottom="@+id/fromimg"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/userClubLogo"
            android:layout_below="@+id/fromimg"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clubtext"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/userClubLogo"
            android:layout_alignBaseline="@+id/userClubLogo"
            android:layout_toRightOf="@+id/userClubLogo"
            android:layout_toEndOf="@+id/userClubLogo"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            />



        <ImageView
            android:id="@+id/gender_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/userClubLogo"
            android:src="@drawable/maleicon"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/user_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gender_image"
            android:layout_alignBaseline="@+id/gender_image"
            android:layout_toRightOf="@+id/gender_image"
            android:layout_toEndOf="@+id/gender_image"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"

            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/date_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/gender_image"
           android:layout_margin="10dp"
            android:src="@drawable/birthdayicon"

            />

        <TextView
            android:id="@+id/user_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_alignBaseline="@+id/date_image"
            android:layout_alignBottom="@+id/date_image"
            android:layout_toRightOf="@+id/date_image"
            android:layout_toEndOf="@+id/date_image"
            android:textColor="@color/black"
            android:textStyle="bold"
            />



    </RelativeLayout>

</RelativeLayout>