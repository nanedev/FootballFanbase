<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <RelativeLayout
        android:id="@+id/rankingslayoutcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/seaparator1"
        android:layout_toStartOf="@+id/seaparator1">

        <RelativeLayout
            android:id="@+id/rankingsLayoutplayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/seaparator1"
            android:layout_toStartOf="@+id/seaparator1"
            android:background="@drawable/shape_table">

            <TextView
                android:id="@+id/playersText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"

                android:text="PLAYERS"
                 />

            <TextView
                android:id="@+id/playerRankingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/playersText"
                android:layout_centerHorizontal="true"
                android:text="RANKING"
              />


        </RelativeLayout>

        <View
            android:id="@+id/seaparator1"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/clubrankinglayout"
            android:layout_toStartOf="@+id/clubrankinglayout"
            android:background="@color/white" />


        <RelativeLayout
            android:id="@+id/clubrankinglayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_table"
            android:paddingEnd="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp">

            <TextView
                android:id="@+id/clubtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="CLUBS"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/clubrankingtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clubtext"
                android:layout_centerHorizontal="true"
                android:text="RANKING"
                android:textColor="@color/white" />


        </RelativeLayout>


        <View
            android:id="@+id/seaparator2"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/clubrankinglayout"
            android:layout_toRightOf="@+id/clubrankinglayout"
            android:background="@color/white" />


        <RelativeLayout
            android:id="@+id/fansrankiniglayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/seaparator2"
            android:layout_toRightOf="@+id/seaparator2"
            android:background="@drawable/shape_table">


            <TextView
                android:id="@+id/fantext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="FANS"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/fanrankingtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fantext"
                android:layout_centerHorizontal="true"
                android:text="RANKING"
                android:textColor="@color/white" />


        </RelativeLayout>


    </RelativeLayout>

    <View
        android:id="@+id/horizontalviewranking"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rankingslayoutcontainer"
        android:background="@color/black" />




    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playersRankingrecyclerview"
        android:layout_below="@+id/horizontalviewranking">



    </android.support.v7.widget.RecyclerView>

</RelativeLayout>