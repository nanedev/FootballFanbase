<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginStart="10dp" android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#ffffff" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_comments">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_for_comments_image_username">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileComment"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username_comment_profile"
                android:textStyle="bold"
                android:text="neki username"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/profileComment"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/textComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username_comment_profile"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_down"
                android:layout_margin="2dp"
                android:id="@+id/down_arrow_comments"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/layout_for_comments_image_username"
            android:background="#9e9e9e"
            android:id="@+id/linecomments"/>
        <TextView
            android:id="@+id/number_of_likes_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linecomments"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textColor="#1976d2"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linecomments"
            android:id="@+id/likecommentsimage"
            android:layout_toEndOf="@+id/number_of_likes_comments"
            android:layout_toRightOf="@+id/number_of_likes_comments"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/blue_oval_for_like"
            android:src="@drawable/bluelike"
            />


        <TextView
            android:id="@+id/number_of_dislikes_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/linecomments"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:textColor="#d50000"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commentsInComments_textview"
            android:layout_below="@id/linecomments"
            android:text="Reply"
            android:textColor="#1976d2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/number_commentsInComments"
            android:layout_below="@+id/commentsInComments_textview"
            android:layout_centerHorizontal="true"

            android:textColor="#1976d2"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dislikecommentsimage"
            android:padding="10dp"
            android:layout_below="@+id/linecomments"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/number_of_dislikes_comments"
            android:layout_toStartOf="@+id/number_of_dislikes_comments"
            android:background="@drawable/red_oval_for_dislike"
            android:src="@drawable/reddislike"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9e9e9e"
            android:id="@+id/linecomments2"
            android:layout_below="@+id/likecommentsimage"/>


        <TextView
            android:id="@+id/comment_something_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linecomments2"
            android:background="@null"
            android:gravity="top"
            android:hint="comment something..."
            android:padding="5dp"
            android:textColor="#000000"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
