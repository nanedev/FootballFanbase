<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.malikbisic.sportapp.activity.AddPhotoOrVideo">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_post_photo_or_video"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/RL_POST"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"

            android:text="POST" />


        <RelativeLayout
            android:id="@+id/RL_POST"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">


            <EditText
                android:id="@+id/tell_something_about_video_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"

                android:layout_marginTop="15dp"
                android:gravity="top"
                android:hint="Tell something about this"
                android:inputType="textMultiLine" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_below="@+id/tell_something_about_video_image"
                android:layout_marginTop="10dp"
                android:scrollbarAlwaysDrawVerticalTrack="true">

                <com.malikbisic.sportapp.activity.DynamicImageView
                    android:id="@+id/post_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:adjustViewBounds="true"
                    android:scrollbars="vertical"
                    android:visibility="visible" />
            </ScrollView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tell_something_about_video_image">

                <cn.jzvd.JZVideoPlayerStandard
                    android:id="@+id/post_video"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </FrameLayout>


        </RelativeLayout>


    </RelativeLayout>

</ScrollView>
