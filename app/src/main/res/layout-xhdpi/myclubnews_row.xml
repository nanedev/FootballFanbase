<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myClubNewsTitle"
        android:textSize="27dp"
        android:textStyle="bold"
        android:text="Title"/>

        <TextView
            android:id="@+id/myClubNewsDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myClubNewsTitle"
            android:layout_marginTop="10dp"
            android:text="Desription"
            android:textSize="17dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/myClubNewsImage"
            android:src="@drawable/fans"
            android:scaleType="fitXY"
            android:layout_below="@id/myClubNewsDesc"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>