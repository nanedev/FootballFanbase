<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/row_layout_relative_users_posts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/picture_and_username_users_posts"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/image_post_background_users_posts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_wall_users_posts"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/username_wall_users_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image_wall_users_posts"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/clubLogoPost_users_posts"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/down_arrow_users_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/arrow_down"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#9e9e9e" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_for_images_vide_audio_users_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture_and_username_users_posts">

            <RelativeLayout
                android:id="@+id/layout_audio_textview_users_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">


                <TextView
                    android:id="@+id/audio_textview_users_posts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_for_audio_player_users_posts"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/layout_audio_textview_users_posts"
                android:background="#b71c1c"
                android:visibility="visible">


                <Button
                    android:id="@+id/play_button_users_posts"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/pause_button_users_posts"
                    android:layout_toStartOf="@+id/pause_button_users_posts"
                    android:background="@drawable/ic_play_circle_filled_black_24dp" />


                <Button
                    android:id="@+id/pause_button_users_posts"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBaseline="@+id/play_button_users_posts"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_pause_circle_filled_black_24dp" />

                <Button
                    android:id="@+id/stop_button_users_posts"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBaseline="@+id/pause_button_users_posts"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_toEndOf="@+id/pause_button_users_posts"
                    android:layout_toRightOf="@+id/pause_button_users_posts"
                    android:background="@drawable/ic_stop_black_24dp" />

                <SeekBar
                    android:id="@+id/audio_seek_bar_users_posts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="20dp"
                    android:progressDrawable="@drawable/red_scrubber_progress"
                    android:thumb="@drawable/red_scrubber_control" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_for_text_image_users_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/text_for_image_users_posts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_for_image_users_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_for_text_image_users_posts"
                android:visibility="gone">

                <com.malikbisic.sportapp.activity.DynamicImageView
                    android:id="@+id/posted_image_users_posts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/layout_for_text_image_users_posts"
                    android:layout_margin="15dp"
                    android:visibility="visible"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_for_video_text_users_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/text_for_video_users_posts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/framelayout_users_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_for_video_text_users_posts"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp">

                <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
                    android:id="@+id/posted_video_users_posts"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/layout_for_only_post_users_posts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:padding="5dp">

                <TextView
                    android:id="@+id/post_text_main_page_users_posts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </RelativeLayout>

        </RelativeLayout>


        <View
            android:id="@+id/horizontal_line1264_users_posts"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/layout_for_images_vide_audio_users_posts"
            android:layout_marginTop="25dp"
            android:background="#9e9e9e" />

        <RelativeLayout
            android:id="@+id/like_dislike_layout_users_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontal_line1264_users_posts"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/number_of_likes_users_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:textColor="#1976d2"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/like_button_users_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/number_of_likes_users_posts"
                android:layout_toRightOf="@+id/number_of_likes_users_posts"
                android:background="@drawable/blue_oval_for_like"
                android:padding="20dp"
                android:src="@drawable/bluelike"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comments_textview_users_posts"
                android:text="Comments"
                android:textColor="#1976d2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_comments_users_posts"
                android:layout_below="@+id/comments_textview_users_posts"
                android:layout_centerHorizontal="true"

                android:textColor="#1976d2"
                />

            <TextView
                android:id="@+id/number_of_dislikes_users_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#d50000"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/dislike_button_users_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/number_of_dislikes_users_posts"
                android:layout_toStartOf="@+id/number_of_dislikes_users_posts"
                android:background="@drawable/red_oval_for_dislike"
                android:padding="20dp"
                android:src="@drawable/reddislike" />


        </RelativeLayout>

        <View
            android:id="@+id/horizontal_line_wall5_users_posts"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/like_dislike_layout_users_posts"
            android:background="#9e9e9e" />

        <TextView
            android:id="@+id/comment_something_users_posts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontal_line_wall5_users_posts"
            android:background="@null"
            android:ems="10"
            android:gravity="top"
            android:hint="comment something..."
            android:padding="5dp"
            android:textColor="#000000"
            android:textCursorDrawable="@null" />


    </RelativeLayout>


</android.support.v7.widget.CardView>