<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/row_layout_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/picture_and_username">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_wall"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/profilimage"
                android:layout_toStartOf="@+id/username_wall"
                android:layout_toLeftOf="@+id/username_wall"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/username_wall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="someusername"
                android:textColor="#000000"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_for_images_vide_audio"
            android:layout_below="@+id/picture_and_username">

            <RelativeLayout
                android:id="@+id/layout_audio_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">


                <TextView
                    android:id="@+id/audio_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:hint="You didn't said anything about this audio file"
                    android:textColor="#000000"
                    android:textStyle="bold"

                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_for_audio_player"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/layout_audio_textview"
                android:layout_marginTop="10dp"
                android:background="#b71c1c"
                android:visibility="gone">


                <Button
                    android:id="@+id/play_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/pause_button"
                    android:layout_toStartOf="@+id/pause_button"
                    android:background="@drawable/ic_play_circle_filled_black_24dp" />


                <Button
                    android:id="@+id/pause_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBaseline="@+id/play_button"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_pause_circle_filled_black_24dp" />

                <Button
                    android:id="@+id/stop_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBaseline="@+id/pause_button"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_toEndOf="@+id/pause_button"
                    android:layout_toRightOf="@+id/pause_button"
                    android:background="@drawable/ic_stop_black_24dp" />

                <SeekBar
                    android:id="@+id/audio_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="20dp"
                    android:progressDrawable="@drawable/red_scrubber_progress"
                    android:thumb="@drawable/red_scrubber_control" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_for_text_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/picture_and_username"
                android:visibility="visible">

                <TextView
                    android:id="@+id/text_for_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_for_image"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_above="@id/like_dislike_layout"
                android:layout_alignEnd="@+id/framelayout"
                android:layout_alignRight="@+id/framelayout"
                android:layout_below="@id/layout_for_text_image"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/posted_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/fans"
                    android:visibility="visible"

                    />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/framelayout">

                <VideoView
                    android:id="@+id/posted_video"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_below="@+id/layout_for_images_vide_audio"
            android:background="#9e9e9e" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/like_dislike_layout"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/layout_for_images_vide_audio"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_of_likes"
                android:text="likes"
                android:textColor="#1976d2"
                android:layout_centerVertical="true" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/like_button"
                android:src="@drawable/bluelike"
                android:background="@drawable/blue_oval_for_like"
                android:padding="20dp"
                android:layout_toRightOf="@+id/number_of_likes"
                android:layout_toEndOf="@+id/number_of_likes"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_of_dislikes"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:text="dislikes"
                android:textColor="#d50000"
                android:layout_centerVertical="true" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dislike_button"
                android:src="@drawable/reddislike"
                android:background="@drawable/red_oval_for_dislike"
                android:padding="20dp"
                android:layout_toStartOf="@+id/number_of_dislikes"
                android:layout_toLeftOf="@+id/number_of_dislikes"
                android:layout_marginRight="10dp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#9e9e9e"
            android:id="@+id/horizontal_line_wall5"
            android:layout_below="@+id/like_dislike_layout" />

        <EditText
            android:id="@+id/comment_something"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontal_line_wall5"
            android:background="@null"
            android:cursorVisible="true"
            android:ems="10"
            android:gravity="top"
            android:hint="comment something..."
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:textColor="#000000"
            android:textCursorDrawable="@null" />


    </RelativeLayout>

</android.support.v7.widget.CardView>