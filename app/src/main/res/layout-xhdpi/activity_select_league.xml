<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.malikbisic.sportapp.SelectLeagueActivity">


    <SearchView
        android:id="@+id/search_league"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:queryHint="Search league"
        android:gravity="right"/>

    <View android:background="#ffffff"
        android:layout_width = "match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/search_league"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/league_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_league"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
