<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_fragment_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:fitsSystemWindows="true"
    tools:context="com.malikbisic.sportapp.ProfileFragment">


    <RelativeLayout
        android:id="@+id/profil_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/backgorund_profil_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/get_profile_image_idUser"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"

                />

            <ProgressBar
                android:id="@+id/loadingProfileImageProgressBarUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp" />


            <TextView
                android:id="@+id/user_usernameUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/get_profile_image_idUser"
                android:layout_centerHorizontal="true"
                android:textSize="24sp"
                android:gravity="center"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/user_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/backgorund_profil_layout">


            <View
                android:id="@+id/secondline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/user_usernameUser"
                android:layout_marginTop="10dp"
                android:background="#9e9e9e" />

            <TextView
                android:id="@+id/country_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/secondline"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Country:" />

            <RelativeLayout
                android:id="@+id/user_country_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/country_tv"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/user_countryUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textStyle="bold" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_countryFlagUser"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"

                    />
            </RelativeLayout>

            <View
                android:id="@+id/thirdline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/user_country_layout"
                android:layout_marginTop="10dp"
                android:background="#9e9e9e" />

            <TextView
                android:id="@+id/club_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/thirdline"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Club:" />


            <RelativeLayout
                android:id="@+id/club_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/club_tv"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/club_logo_profileUser"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp" />

                <TextView
                    android:id="@+id/user_clubUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textStyle="bold" />


            </RelativeLayout>

            <View
                android:id="@+id/fourthline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/club_layout"
                android:layout_marginTop="10dp"
                android:background="#9e9e9e" />

            <TextView
                android:id="@+id/gender_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fourthline"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Gender:" />


            <RelativeLayout
                android:id="@+id/gender_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gender_tv"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/gender_imageUser"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"

                    />

                <TextView
                    android:id="@+id/user_genderUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textStyle="bold" />


            </RelativeLayout>

            <View
                android:id="@+id/fifthline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/gender_layout"
                android:layout_marginTop="10dp"
                android:background="#9e9e9e" />

            <TextView
                android:id="@+id/date_birth_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fifthline"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Date of birth:" />

            <RelativeLayout
                android:id="@+id/date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_birth_tv"
                android:layout_marginTop="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/date_imageUser"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/birthday"

                    />

                <TextView
                    android:id="@+id/user_dateUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textStyle="bold" />


            </RelativeLayout>

            <View
                android:id="@+id/sixthline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/date_layout"
                android:layout_marginTop="10dp"
                android:background="#9e9e9e" />


        </RelativeLayout>

    </RelativeLayout>



</ScrollView>