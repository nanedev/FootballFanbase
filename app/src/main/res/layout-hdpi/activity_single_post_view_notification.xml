<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/row_layout_relative_notif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/picture_and_usernameSinglePost"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/image_post_backgroundSinglePost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_wallSinglePost"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/username_wallSinglePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image_wallSinglePost"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/clubLogoPostSinglePost"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />

            <ImageView
                android:id="@+id/down_arrowSinglePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/arrow_down"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#9e9e9e" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_for_images_vide_audioSinglePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picture_and_usernameSinglePost">

            <RelativeLayout
                android:id="@+id/layout_audio_textviewSinglePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">


                <TextView
                    android:id="@+id/audio_textviewSinglePost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_for_audio_playerSinglePost"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@+id/layout_audio_textviewSinglePost"
                android:background="#b71c1c"
                android:visibility="visible">


                <Button
                    android:id="@+id/play_buttonSinglePost"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/pause_buttonSinglePost"
                    android:layout_toStartOf="@+id/pause_buttonSinglePost"
                    android:background="@drawable/ic_play_circle_filled_black_24dp" />


                <Button
                    android:id="@+id/pause_buttonSinglePost"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBaseline="@+id/play_buttonSinglePost"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ic_pause_circle_filled_black_24dp" />

                <Button
                    android:id="@+id/stop_buttonSinglePost"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBaseline="@+id/pause_buttonSinglePost"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_toEndOf="@+id/pause_buttonSinglePost"
                    android:layout_toRightOf="@+id/pause_buttonSinglePost"
                    android:background="@drawable/ic_stop_black_24dp" />

                <SeekBar
                    android:id="@+id/audio_seek_barSinglePost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginStart="20dp"
                    android:progressDrawable="@drawable/red_scrubber_progress"
                    android:thumb="@drawable/red_scrubber_control" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/layout_for_text_imageSinglePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/text_for_imageSinglePost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_for_imageSinglePost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_for_text_imageSinglePost"
                android:visibility="gone">

                <com.malikbisic.sportapp.utils.DynamicImageView
                    android:id="@+id/posted_imageSinglePost"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/layout_for_text_imageSinglePost"
                    android:layout_margin="15dp"
                    android:visibility="visible"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_for_video_textSinglePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/text_for_videoSinglePost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/framelayoutSinglePost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_for_video_textSinglePost"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp">

                <cn.jzvd.JZVideoPlayerStandard
                    android:id="@+id/posted_videoSinglePost"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/layout_for_only_postSinglePost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:padding="5dp">

                <TextView
                    android:id="@+id/post_text_main_pageSinglePost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:textColor="#000000"
                    android:textSize="20sp" />

            </RelativeLayout>

        </RelativeLayout>


        <View
            android:id="@+id/horizontal_line1264"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/layout_for_images_vide_audioSinglePost"
            android:layout_marginTop="25dp"
            android:background="#9e9e9e" />

        <RelativeLayout
            android:id="@+id/like_dislike_layoutSinglePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontal_line1264"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/number_of_likesSinglePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:textColor="#1976d2"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/like_buttonSinglePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/number_of_likesSinglePost"
                android:layout_toRightOf="@+id/number_of_likesSinglePost"
                android:background="@drawable/blue_oval_for_like"
                android:padding="20dp"
                android:src="@drawable/bluelike"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comments_textviewSinglePost"
                android:text="Comments"
                android:textColor="#1976d2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_commentsSinglePost"
                android:layout_below="@+id/comments_textviewSinglePost"
                android:layout_centerHorizontal="true"

                android:textColor="#1976d2"
                />

            <TextView
                android:id="@+id/number_of_dislikesSinglePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#d50000"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/dislike_buttonSinglePost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/number_of_dislikesSinglePost"
                android:layout_toStartOf="@+id/number_of_dislikesSinglePost"
                android:background="@drawable/red_oval_for_dislike"
                android:padding="20dp"
                android:src="@drawable/reddislike" />


        </RelativeLayout>

        <View
            android:id="@+id/horizontal_line_wall5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/like_dislike_layoutSinglePost"
            android:background="#9e9e9e" />

        <TextView
            android:id="@+id/comment_somethingSinglePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontal_line_wall5"
            android:background="@null"
            android:ems="10"
            android:gravity="top"
            android:hint="comment something..."
            android:padding="5dp"
            android:textColor="#000000"
            android:textCursorDrawable="@null" />


    </RelativeLayout>


</ScrollView>