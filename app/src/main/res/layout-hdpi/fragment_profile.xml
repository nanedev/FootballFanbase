<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_fragment_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    tools:context="com.malikbisic.sportapp.activity.ProfileFragment"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">




    <RelativeLayout
        android:id="@+id/profil_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/backgorund_profil_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/profile_shape">

            <TextView
                android:id="@+id/my_posts_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/edit_profile_image"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/edit_profile_image"
                android:layout_toStartOf="@+id/edit_profile_image"
                android:background="@drawable/rect_shape"
                android:text="my posts"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/edit_profile_image"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/edit_profile_image"
                android:layout_toRightOf="@+id/edit_profile_image"
                android:background="@drawable/rect_shape"
                android:text="nesto"
                android:textColor="#000"
                android:textStyle="bold" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/get_profile_i2mage_id"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/edit_profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <ProgressBar
                android:id="@+id/loadingProfileImageProgr2essBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_profile_image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/edit_profile2_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect_shape"
                android:text="change picture"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_2username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/get_profile_image_id"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/secondline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/user_username"
                android:layout_marginTop="10dp"
                android:background="#000" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/backgorund_profil_layout">

            <RelativeLayout
                android:id="@+id/user_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eeeeee">


                <TextView
                    android:id="@+id/your_country_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/secondline"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Country:"
                    android:textColor="#000" />

                <RelativeLayout
                    android:id="@+id/user_country_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/your_country_tv"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/user_coun2try"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_countryFlag"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000"
                        android:textStyle="bold" />


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_countr2Flag"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"

                        />
                </RelativeLayout>

                <View
                    android:id="@+id/thirdline"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/user_country_layout"
                    android:layout_marginTop="2dp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/your_club_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/thirdline"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Club:"
                    android:textColor="#000" />


                <RelativeLayout
                    android:id="@+id/club_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/your_club_tv"
                    android:layout_marginTop="5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/club_logo_profi2le"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/use2r_club"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/club_logo_profile"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000"
                        android:textStyle="bold" />


                </RelativeLayout>

                <View
                    android:id="@+id/fourthline"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/club_layout"
                    android:layout_marginTop="2dp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/your_gender_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fourthline"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Gender:"
                    android:textColor="#000" />


                <RelativeLayout
                    android:id="@+id/gender_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/your_gender_tv"
                    android:layout_marginTop="5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/gender_im2age"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"

                        />

                    <TextView
                        android:id="@+id/user_gen2der"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gender_image"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000"
                        android:textStyle="bold" />


                </RelativeLayout>

                <View
                    android:id="@+id/fifthline"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/gender_layout"
                    android:layout_marginTop="2dp"
                    android:background="#000" />



                <View
                    android:id="@+id/sixthline"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/fifthline"
                    android:layout_marginTop="2dp"
                    android:background="#000" />

                <TextView
                    android:id="@+id/your_premium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/sixthline"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Your free trial premium will end on :"
                    android:textColor="#000" />

                <RelativeLayout
                    android:id="@+id/premium_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/your_premium"
                    android:layout_marginTop="5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/premium_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/premium"

                        />

                    <TextView
                        android:id="@+id/user_premium_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/premium_image"
                        android:layout_centerHorizontal="true"
                        android:textColor="#000"
                        android:textStyle="bold" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/premium_layout"
                    android:layout_marginTop="2dp"
                    android:background="#000" />

            </RelativeLayout>
        </ScrollView>


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>



