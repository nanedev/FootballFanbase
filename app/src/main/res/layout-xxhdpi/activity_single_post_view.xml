<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/editpostTooblar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/row_layout_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
       android:background="#fff"
     android:layout_below="@+id/appBarLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <RelativeLayout
                android:id="@+id/picture_and_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image_wall"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_toLeftOf="@+id/username_wall"
                    android:layout_toStartOf="@+id/username_wall"
                    android:paddingBottom="10dp"
                    android:src="@drawable/profilimage" />

                <TextView
                    android:id="@+id/username_wall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:text="someusername"
                    android:textColor="#000000"
                    android:textStyle="bold" />


            </RelativeLayout>




                <RelativeLayout
                    android:id="@+id/layout_audio_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/picture_and_username"
                    >


                    <EditText
                        android:id="@+id/audio_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:hint="You didn't said anything about this audio file"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textStyle="bold"


                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_for_audio_player"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/layout_audio_textview"
                    android:layout_marginTop="10dp"
                    android:background="#b71c1c"
                    android:visibility="visible">


                    <Button
                        android:id="@+id/play_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@+id/pause_button"
                        android:layout_toStartOf="@+id/pause_button"
                        android:background="@drawable/ic_play_circle_filled_black_24dp" />


                    <Button
                        android:id="@+id/pause_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignBaseline="@+id/play_button"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/ic_pause_circle_filled_black_24dp" />

                    <Button
                        android:id="@+id/stop_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignBaseline="@+id/pause_button"
                        android:layout_marginLeft="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_toEndOf="@+id/pause_button"
                        android:layout_toRightOf="@+id/pause_button"
                        android:background="@drawable/ic_stop_black_24dp" />

                    <SeekBar
                        android:id="@+id/audio_seek_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="40dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginStart="20dp"
                        android:progressDrawable="@drawable/red_scrubber_progress"
                        android:thumb="@drawable/red_scrubber_control" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_for_text_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:layout_below="@+id/picture_and_username">

                    <EditText
                        android:id="@+id/text_for_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:hint="You didn't said anything about this image file"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"

                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_for_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_for_text_image"
                    android:visibility="gone">

                    <com.malikbisic.sportapp.activity.DynamicImageView
                        android:id="@+id/posted_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/layout_for_text_image"
                        android:layout_margin="10dp"
                        android:src="@drawable/fans"
                        android:visibility="visible"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_for_video_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/picture_and_username"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/text_for_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:hint="You didn't said anything about this video file"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"

                        android:textStyle="bold" />
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/framelayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_for_video_text"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp">

                    <cn.jzvd.JZVideoPlayerStandard
                        android:id="@+id/posted_video"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/layout_for_only_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_below="@id/picture_and_username"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/post_text_main_page"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_margin="10dp"
                        android:inputType="textMultiLine"
                        android:textColor="#000000"
                        android:textStyle="bold"


                        />

                </RelativeLayout>

            </RelativeLayout>



    </android.support.v7.widget.CardView>



</RelativeLayout>