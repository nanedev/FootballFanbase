<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginStart="10dp" android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    app:cardBackgroundColor="#ffffff" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_comments">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_for_comments_image_username">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileCommentInComment"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username_comment_profile_in_comment"
                android:textStyle="bold"
                android:text="neki username"
                android:textColor="#000"
                android:layout_marginTop="30dp"
                android:layout_toRightOf="@id/profileCommentInComment"
                android:layout_toEndOf="@+id/profileCommentInComment"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9e9e9e"
                android:layout_below="@+id/profileCommentInComment"/>

            <TextView
                android:id="@+id/textCommentInComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileCommentInComment"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:padding="5dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_down"
                android:layout_margin="2dp"
                android:id="@+id/down_arrow_comments_in_Comments"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000"
                android:layout_below="@id/textCommentInComments"/>
        </RelativeLayout>




    </RelativeLayout>
</android.support.v7.widget.CardView>
