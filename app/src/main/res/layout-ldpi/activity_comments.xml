<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/commentLayout"
    tools:context="com.malikbisic.sportapp.CommentsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/containercommentslayout"
        android:layout_above="@+id/writeCommentlayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recviewcommentslayout">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rec_view_comments"

                >

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/writeCommentlayout"
        android:background="#000"
        android:padding="5dp">
        <EditText
            android:id="@+id/writeComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/sendComment"
            android:layout_toStartOf="@+id/sendComment"
            android:ems="10"
            android:hint="Write a comment"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/sendComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_send_black_24dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</RelativeLayout>
