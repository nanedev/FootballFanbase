<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <RelativeLayout
        android:id="@+id/row_layout_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_wall"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/profilimage"
            android:layout_toStartOf="@+id/username_wall"
            android:layout_toLeftOf="@+id/username_wall"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/username_wall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="someusername" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/horizontal_line_wall1"
            android:layout_below="@+id/profile_image_wall"
            android:background="#9e9e9e" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_for_images_vide_audio"
            android:layout_below="@+id/horizontal_line_wall1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_text_wall"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:text="SOME TEXT"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/horizontal_line_wall2"
                android:layout_below="@+id/user_text_wall"
                android:background="#9e9e9e"
                android:layout_marginTop="5dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/posted_image"
                android:layout_below="@+id/horizontal_line_wall2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/fans"

                />

            <VideoView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/posted_video"
                android:layout_below="@+id/horizontal_line_wall2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/horizontal_line_wall3"
                android:layout_below="@+id/posted_image"
                android:background="#9e9e9e"
                android:layout_marginTop="5dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/horizontal_line_wall4"
                android:layout_below="@+id/posted_video"
                android:background="#9e9e9e"
                android:layout_marginTop="5dp"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/audio_file"
                android:layout_below="@+id/horizontal_line_wall2"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/horizontal_line5"
                android:layout_below="@+id/audio_file"
                android:background="#9e9e9e"
                android:layout_marginTop="5dp"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/like_dislike_layout"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/layout_for_images_vide_audio">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/like_button"
                android:src="@drawable/ic_thumb_up_black_24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:padding="10dp" />

            <View
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:background="#9e9e9e"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="30dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dislike_button"
                android:src="@drawable/ic_thumb_down_black_24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:padding="10dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#9e9e9e"
            android:id="@+id/horizontal_line_wall5"
            android:layout_below="@+id/like_dislike_layout" />

        <EditText
            android:id="@+id/comment_something"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/horizontal_line_wall5"

            android:background="@null"
            android:cursorVisible="true"
            android:ems="10"
            android:gravity="top"
            android:hint="comment something..."
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:textColor="#000000"
            android:textCursorDrawable="@null" />


    </RelativeLayout>

</android.support.v7.widget.CardView>