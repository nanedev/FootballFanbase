<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_fragment_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.malikbisic.sportapp.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <!-- TODO: Update blank fragment layout -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/profileImageLayout"
                android:background="@drawable/fans">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/get_profile_image_id"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/profilimage" />

                <ProgressBar
                    android:id="@+id/loadingProfileImageProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />


            </RelativeLayout>

            <TextView
                android:id="@+id/name_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profileImageLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Ime Prezime"
                android:textSize="24sp"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/user_countryFlag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/aq_flag"
                android:layout_below="@+id/name_surname"
                android:layout_toRightOf="@+id/date_textview"
                android:layout_above="@+id/horizontal_line" />


            <TextView
                android:id="@+id/user_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DrÅ¾ava"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_below="@+id/name_surname"
                android:layout_toRightOf="@+id/user_countryFlag"
                android:layout_toEndOf="@+id/user_countryFlag" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#9e9e9e"
                android:layout_below="@+id/user_country"
                android:layout_marginTop="10dp"
                android:id="@+id/horizontal_line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_username_textview"
                android:text="Username:"
                android:layout_below="@id/horizontal_line"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#9e9e9e"
                android:layout_below="@+id/user_username_textview"
                android:layout_marginTop="10dp"
                android:id="@+id/horizontal_line2" />

            <TextView
                android:id="@+id/user_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/user_username_textview"
                android:layout_toEndOf="@+id/user_username_textview"
                android:layout_toRightOf="@+id/user_username_textview"
                android:layout_marginLeft="50dp"
                android:text="Username" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender:"
                android:layout_below="@id/horizontal_line2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/gender_textview" />

            <TextView
                android:id="@+id/user_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/user_username"
                android:layout_alignStart="@+id/user_username"
                android:layout_alignTop="@+id/gender_textview"
                android:text="Gender" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#9e9e9e"
                android:layout_below="@+id/gender_textview"
                android:layout_marginTop="10dp"
                android:id="@+id/horizontal_line3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date_textview"
                android:layout_below="@+id/horizontal_line3"
                android:text="Date of birth:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/user_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/user_username"
                android:layout_alignStart="@+id/user_username"
                android:layout_alignTop="@+id/date_textview"
                android:text="Date" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#9e9e9e"
                android:layout_below="@+id/date_textview"
                android:layout_marginTop="10dp"
                android:id="@+id/horizontal_line4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/club_textview"
                android:layout_below="@+id/horizontal_line4"
                android:text="Favourite club:"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/user_club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/user_username"
                android:layout_alignStart="@+id/user_username"
                android:layout_alignTop="@+id/club_textview"
                android:text="Club" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#9e9e9e"
                android:layout_below="@+id/club_textview"
                android:layout_marginTop="10dp"
                android:id="@+id/horizontal_line5" />


        </RelativeLayout>
    </ScrollView>

</ScrollView>